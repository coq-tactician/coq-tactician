+(** An additive subgroup I of a ring R is an ideal when: *)
+Class IsIdeal {R : CRing} (I : Subgroup R) := {
+  (** Forall r : R and x : I, there exists an a : I, such that a = r * x inside R *)
+  isideal (r : R) (x : I)
+    : exists (a : I), issubgroup_incl a = r * issubgroup_incl x;
+}.
