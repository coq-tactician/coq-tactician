+Lemma cring_int_mul_negate {R} x
+  : cring_int_mul R (- x) = - cring_int_mul R x.
+Proof.
+  snrapply (groups.preserves_negate _).
+  1-6: exact _.
+  snrapply Build_IsMonoidPreserving.
+  1: exact _.
+  split.
